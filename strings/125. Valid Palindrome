# 1. Two-pointer technique (O(n), constant space)

class Solution:
    def isPalindrome(self, s: str) -> bool:
        """
        Two-pointer approach:
        - Skip non-alphanumeric characters
        - Compare characters from both ends (case-insensitive)
        """
        l, r = 0, len(s) - 1

        while l < r:
            # Move left pointer until it lands on an alphanumeric character
            while l < r and not self.alphaNum(s[l]):
                l += 1

            # Move right pointer until it lands on an alphanumeric character
            while r > l and not self.alphaNum(s[r]):
                r -= 1

            # Compare characters ignoring case
            if s[l].lower() != s[r].lower():
                return False

            # Move pointers inward
            l += 1
            r -= 1

        return True

    def alphaNum(self, c: str) -> bool:
        """
        Returns True if character c is alphanumeric (A-Z, a-z, 0-9).
        Equivalent to c.isalnum() but implemented manually.
        """
        return (
            ord('A') <= ord(c) <= ord('Z') or
            ord('a') <= ord(c) <= ord('z') or
            ord('0') <= ord(c) <= ord('9')
        )


# 2. String filtering + reverse comparison (simpler, but O(n) space)

class Solution:
    def isPalindrome(self, s: str) -> bool:
        """
        Simpler approach:
        - Build a cleaned lowercase string containing only alphanumeric chars
        - Check if it reads the same forwards and backwards
        """
        filtered = ""

        for c in s:
            if c.isalnum():
                filtered += c.lower()

        # Python trick: reversed string = filtered[::-1]
        return filtered == filtered[::-1]
