 """
        Moves all zeros in the array to the end while keeping the relative
        order of non-zero elements. This is done in-place using a two-pointer
        approach (left pointer 'l' and right pointer 'r').

        Time Complexity: O(n)
        Space Complexity: O(1)
        """


class Solution:
    def moveZeroes(self, nums: List[int]) -> None:

        # 'l' marks the position where the next non-zero element should go
        l = 0  

        # Traverse with 'r' to find non-zero elements
        for r in range(len(nums)):
            # If current element is non-zero, swap it to the 'l' position
            if nums[r] != 0:
                nums[l], nums[r] = nums[r], nums[l]
                l += 1  # Move 'l' forward to the next position
