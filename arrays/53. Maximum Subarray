class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        """
        Finds the maximum sum of a contiguous subarray within a given array of integers.
        Uses Kadane's Algorithm for optimal O(n) time complexity.

        Parameters:
        nums (List[int]): List of integers.

        Returns:
        int: Maximum subarray sum.
        """
        
        # Initialize maxSub with the first element to handle arrays with all negative numbers
        maxSub = nums[0]
        
        # curSum keeps track of the current subarray sum
        curSum = 0

        # Iterate through each number in the array
        for n in nums:
            # If current sum is negative, reset it to 0
            # because adding a negative sum would decrease the total
            if curSum < 0:
                curSum = 0

            # Add the current number to the current sum
            curSum += n

            # Update maxSub if the current sum is greater than previous maxSub
            maxSub = max(curSum, maxSub)
        
        # Return the maximum subarray sum found
        return maxSub
