// Description: Given an array of prices, find the maximum profit
//              from a single buy-sell transaction.

//Using C++
#include <vector>
#include <algorithm>
using namespace std;

class Solution {
public:
    int maxProfit(vector<int>& prices) {
        if (prices.empty()) return 0; // edge case
        
        int buy = prices[0];     // Minimum price seen so far
        int maxProfit = 0;       // Maximum profit so far
        
        for (int i = 0; i < prices.size(); i++) {
            if (prices[i] < buy) {
                buy = prices[i];             // Update buy price if lower
            } else {
                int profit = prices[i] - buy; // Calculate profit
                maxProfit = max(maxProfit, profit); // Update maxProfit
            }
        }
        
        return maxProfit;
    }
};



//Using Python(Two-pointer approach)
# Author: [Your Name]
# Problem: Best Time to Buy and Sell Stock (Leetcode 121)
# Date: [Date]
# Description: Find the maximum profit using a two-pointer method.

from typing import List

class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        if not prices:  # Edge case: empty list
            return 0
        
        buy, sell = 0, 1
        maxProfit = 0

        while sell < len(prices):
            if prices[sell] > prices[buy]:
                profit = prices[sell] - prices[buy]
                maxProfit = max(maxProfit, profit)  # Update max profit
            else:
                buy = sell  # Update buy to current day if price drops
            
            sell += 1  # Move to the next day
        
        return maxProfit
